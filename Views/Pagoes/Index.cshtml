@model IEnumerable<MVC.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoServicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puesto.IdPuesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal.IdPersonal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoServicio.IdTipoServicio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPago">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPago">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPago">Delete</a>
                    <a asp-action="GeneratePdf" asp-route-id="@item.IdPago" class="btn btn-primary">Generar PDF</a>

            </td>
        </tr>
}
    </tbody>
</table>
